#!/bin/bash
set -e

_ROOT="$(dirname "$(dirname "$(realpath "${BASH_SOURCE[0]}")")")"

source "$_ROOT/.env"

mysql << SQL
DROP USER IF EXISTS '$MYSQL_USER'@'$MYSQL_HOST';
DROP DATABASE IF EXISTS $MYSQL_DATABASE_NAME;

CREATE USER '$MYSQL_USER'@'$MYSQL_HOST' IDENTIFIED WITH mysql_native_password BY '$MYSQL_PASSWORD';
CREATE DATABASE $MYSQL_DATABASE_NAME;
GRANT ALL PRIVILEGES ON $MYSQL_DATABASE_NAME.* TO '$MYSQL_USER'@'$MYSQL_HOST';
SQL
